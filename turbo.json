{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "jest.config.base.js"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**", "android/build/**", "ios/build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build", "build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "test/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}",
        "jest.config.{js,ts,json}",
        "jest.setup.{js,ts}",
        "tsconfig.json",
        "package.json"
      ]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "test/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}",
        "jest.config.{js,ts,json}",
        "jest.setup.{js,ts}",
        "tsconfig.json",
        "package.json"
      ]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "test/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}",
        "jest.config.{js,ts,json}",
        "jest.setup.{js,ts}",
        "tsconfig.json",
        "package.json"
      ]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "test/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}",
        "jest.config.{js,ts,json}",
        "jest.setup.{js,ts}",
        "tsconfig.json",
        "package.json"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "test/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}",
        "jest.config.{js,ts,json}",
        "jest.setup.{js,ts}",
        "tsconfig.json",
        "package.json"
      ]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "tests/**/*.{ts,js}",
        "e2e/**/*.{ts,js}",
        "playwright.config.{ts,js}",
        "package.json"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}