{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!.env*.local"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "REDIS_URL",
        "JWT_SECRET"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!.env*.local"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "REDIS_URL",
        "JWT_SECRET",
        "PORT"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "playwright.config.*",
        "test/**",
        "src/**/*.test.*",
        "src/**/*.spec.*"
      ],
      "outputs": [
        "coverage/**",
        "test-results/**",
        "playwright-report/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "src/**/*.test.*",
        "src/**/*.spec.*"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "test/**",
        "src/**/*.integration.*"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "playwright.config.*",
        "e2e/**",
        "tests/**"
      ],
      "outputs": [
        "test-results/**",
        "playwright-report/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DATABASE_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        ".eslintignore",
        "eslint.config.*"
      ],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        ".eslintignore",
        "eslint.config.*"
      ],
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": []
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        ".prettierignore",
        "prettier.config.*"
      ],
      "outputs": [],
      "cache": false
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".storybook/**",
        "stories/**"
      ]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".storybook/**",
        "stories/**"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "db:migrate": {
      "cache": false,
      "inputs": [
        "src/database/migrations/**",
        "src/config/database.ts"
      ],
      "outputs": [],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "db:seed": {
      "cache": false,
      "inputs": [
        "src/database/seeds/**"
      ],
      "outputs": [],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "db:reset": {
      "cache": false,
      "inputs": [],
      "outputs": [],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    }
  },
  "globalDependencies": [
    ".env",
    ".env.local",
    ".env.production",
    ".env.development",
    "package.json",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "turbo.json",
    "tsconfig.json",
    ".gitignore"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "TURBO_TOKEN",
    "TURBO_TEAM"
  ]
}