{
  "name": "money-wise",
  "version": "0.1.0",
  "description": "MoneyWise MVP - Personal finance management application",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/backend",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd apps/backend && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd apps/backend && npm run test",
    "test:web": "cd apps/web && npm run test",
    "lint": "npm run lint:backend",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:web",
    "lint:fix:backend": "cd apps/backend && npm run lint -- --fix",
    "lint:fix:web": "cd apps/web && npm run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "setup": "npm install && npm run setup:backend && npm run setup:web",
    "setup:backend": "cd apps/backend && npm install",
    "setup:web": "cd apps/web && npm install",
    "audit:deps": "npm audit --workspaces",
    "clean": "npm run clean:backend && npm run clean:web && npm run clean:types",
    "clean:backend": "cd apps/backend && npm run clean",
    "clean:web": "cd apps/web && npm run clean",
    "clean:types": "cd packages/types && npm run clean",
    "install:ci": "npm ci --workspaces",
    "outdated": "npm outdated --workspaces",
    "doctor": "npm run audit:deps && npm run outdated && npm run clean && npm run build",
    "reset": "rm -rf node_modules apps/*/node_modules packages/*/node_modules && npm install",
    "analyze:web": "cd apps/web && ANALYZE=true npm run build",
    "analyze:deps": "npm ls --depth=0 --json > bundle-analysis/dependencies.json",
    "size-check": "npx size-limit",
    "size-why": "npx size-limit --why",
    "validate:lockfile": "node scripts/validate-lockfile.js",
    "lockfile:report": "node scripts/validate-lockfile.js report",
    "validate:cache": "node scripts/validate-ci-cache.js",
    "cache:report": "node scripts/validate-ci-cache.js report",
    "cache:clean": "node scripts/validate-ci-cache.js clean",
    "cache:verify": "npm cache verify && npm run validate:cache",
    "heal:auto": "node scripts/auto-heal-ci.js",
    "heal:report": "node scripts/auto-heal-ci.js report",
    "infrastructure:health": "npm run validate:lockfile && npm run validate:cache && npm run heal:auto",
    "ci:update": "node scripts/zero-downtime-ci-updater.js",
    "ci:rollback": "node scripts/zero-downtime-ci-updater.js rollback",
    "ci:update-report": "node scripts/zero-downtime-ci-updater.js report"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.3",
    "@size-limit/preset-app": "^11.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "deep-equal": "^2.2.3",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.0",
    "psl": "^1.15.0",
    "size-limit": "^11.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "size-limit": [
    {
      "name": "Web App - Main Bundle",
      "path": "apps/web/.next/static/chunks/pages/_app-*.js",
      "limit": "250 KB"
    },
    {
      "name": "Web App - Index Page",
      "path": "apps/web/.next/static/chunks/pages/index-*.js",
      "limit": "50 KB"
    },
    {
      "name": "Web App - Dashboard",
      "path": "apps/web/.next/static/chunks/pages/dashboard-*.js",
      "limit": "100 KB"
    }
  ]
}
