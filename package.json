{
  "name": "money-wise",
  "version": "0.1.0",
  "description": "MoneyWise MVP - Personal finance management application",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd apps/backend && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd apps/backend && npm run test",
    "test:web": "cd apps/web && npm run test",
    "lint": "npm run lint:backend",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:web",
    "lint:fix:backend": "cd apps/backend && npm run lint -- --fix",
    "lint:fix:web": "cd apps/web && npm run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "setup": "npm install && npm run setup:backend && npm run setup:web",
    "setup:backend": "cd apps/backend && npm install",
    "setup:web": "cd apps/web && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "deep-equal": "^2.2.3",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.0",
    "psl": "^1.15.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "framer-motion": "^12.23.16"
  }
}
