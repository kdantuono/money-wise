# E2E Test Environment Variables
# This file contains test-specific environment variables
# DO NOT commit sensitive data to this file

# Application URLs
PLAYWRIGHT_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://test:testpass@localhost:5432/test_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=test
DATABASE_PASSWORD=testpass
DATABASE_NAME=test_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Secrets (for testing only - not production values)
JWT_ACCESS_SECRET=test-jwt-access-secret-minimum-32-characters-long-for-testing-purposes
JWT_REFRESH_SECRET=test-jwt-refresh-secret-minimum-32-characters-long-different-from-access
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Test Configuration
NODE_ENV=test
CI=false
DEBUG=false

# Timeouts
TEST_TIMEOUT=30000
API_TIMEOUT=10000

# Test User Credentials (default test users)
TEST_USER_EMAIL=test.user@moneywise.com
TEST_USER_PASSWORD=TestPassword123!

# Banking Integration (Test Mode)
SALT_EDGE_APP_ID=test-app-id
SALT_EDGE_SECRET=test-secret
SALT_EDGE_BASE_URL=https://www.saltedge.com/api/v5
SALT_EDGE_MODE=test

# Email (Mock for testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
EMAIL_FROM=noreply@moneywise.test

# Feature Flags
ENABLE_BANKING=true
ENABLE_BUDGETS=true
ENABLE_REPORTS=true
ENABLE_NOTIFICATIONS=false

# Logging
LOG_LEVEL=error
LOG_TO_FILE=false

# Playwright Specific
PLAYWRIGHT_BROWSERS_PATH=0
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# Headless Mode
HEADLESS=true

# Screenshots and Videos
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true
