FROM node:18-alpine

RUN apk add --no-cache curl

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Copy packages and backend code
COPY packages/ ./packages/
COPY backend/ ./backend/

# Build types package
WORKDIR /app/packages/types
RUN npm install && npm run build

# Switch to backend
WORKDIR /app/backend
RUN npm install

EXPOSE 3002

CMD ["npm", "run", "start:dev"]