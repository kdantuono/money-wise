# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME=MoneyWise Backend
APP_VERSION=0.5.0
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# Database Configuration (TimescaleDB)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=moneywise
DB_SCHEMA=public
DB_SYNCHRONIZE=false
DB_LOGGING=true

# TimescaleDB-specific Configuration
TIMESCALEDB_ENABLED=true
TIMESCALEDB_COMPRESSION_ENABLED=true
TIMESCALEDB_RETENTION_ENABLED=true
TIMESCALEDB_CHUNK_TIME_INTERVAL=1d
TIMESCALEDB_COMPRESSION_AFTER=7d
TIMESCALEDB_RETENTION_AFTER=7y

# JWT Configuration
JWT_ACCESS_SECRET=dev-super-secret-jwt-access-key-change-in-production-12345
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev-super-secret-jwt-refresh-key-change-in-production-98765
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Sentry Configuration (optional for dev)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=dev-local

# CloudWatch Monitoring
CLOUDWATCH_ENABLED=false
CLOUDWATCH_NAMESPACE=MoneyWise/Backend
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring
METRICS_ENABLED=true
METRICS_FLUSH_INTERVAL=30000
HEALTH_CHECK_ENABLED=true
