# MoneyWise Backend - Production Environment Configuration
# SECURITY WARNING: NEVER commit this file with real values
# Copy to .env.production and populate with production-specific values

# Application Configuration
NODE_ENV=production
PORT=3001
APP_NAME=MoneyWise Backend
APP_VERSION=0.4.7
API_PREFIX=api
CORS_ORIGIN=https://moneywise.app  # Your production domain

# Database Configuration (Production TimescaleDB)
DB_HOST=prod-db.example.com
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=<CHANGE-ME-PRODUCTION-DB-PASSWORD>
DB_NAME=moneywise_production
DB_SCHEMA=public
DB_SYNCHRONIZE=false  # NEVER enable in production
DB_LOGGING=false      # Reduce overhead in production

# TimescaleDB-specific Configuration
TIMESCALEDB_ENABLED=true
TIMESCALEDB_COMPRESSION_ENABLED=true
TIMESCALEDB_RETENTION_ENABLED=true
TIMESCALEDB_CHUNK_TIME_INTERVAL=1d
TIMESCALEDB_COMPRESSION_AFTER=7d
TIMESCALEDB_RETENTION_AFTER=7y

# JWT Configuration (CRITICAL: Use strong, unique secrets!)
JWT_ACCESS_SECRET=<CHANGE-ME-PRODUCTION-JWT-ACCESS-SECRET-MINIMUM-32-CHARS>
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=<CHANGE-ME-PRODUCTION-JWT-REFRESH-SECRET-MINIMUM-32-CHARS>
JWT_REFRESH_EXPIRES_IN=7d

# Sentry Error Tracking - PRODUCTION PROJECT
# Get DSN from: https://sentry.io/settings/{org}/projects/moneywise-production/keys/
SENTRY_DSN=https://<key>@o<org>.ingest.sentry.io/<production-project-id>
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=moneywise@0.4.7  # Match package.json version

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_FLUSH_INTERVAL=60000  # Less frequent in production (reduce overhead)
HEALTH_CHECK_ENABLED=true

# CloudWatch (Recommended for production)
CLOUDWATCH_ENABLED=true
CLOUDWATCH_NAMESPACE=MoneyWise/Production
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<CHANGE-ME-PRODUCTION-AWS-KEY>
AWS_SECRET_ACCESS_KEY=<CHANGE-ME-PRODUCTION-AWS-SECRET>
