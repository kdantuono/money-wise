# Test Environment Configuration
# Used by CI/CD and local test runs
# ⚠️ These values are optimized for testing - DO NOT use in production!

# Application Configuration
PORT=3002
APP_NAME=MoneyWise Test
APP_VERSION=0.4.1
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000
NODE_ENV=test

# Database Configuration (Test Database)
# Integration tests use these individual variables (not DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=test
DB_PASSWORD=testpass
DB_NAME=test_db
DB_SCHEMA=public
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Prisma uses DATABASE_URL for migrations
DATABASE_URL=postgresql://test:testpass@localhost:5432/test_db

# TimescaleDB Configuration (Disabled for faster tests)
TIMESCALEDB_ENABLED=false
TIMESCALEDB_COMPRESSION_ENABLED=false
TIMESCALEDB_RETENTION_ENABLED=false

# JWT Configuration (Test-safe secrets)
JWT_ACCESS_SECRET=test-jwt-access-secret-minimum-32-characters-long-for-testing-purposes
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=test-jwt-refresh-secret-minimum-32-characters-long-different-from-access
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Test Instance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Sentry (Disabled for Tests)
SENTRY_DSN=
SENTRY_ENVIRONMENT=test
SENTRY_RELEASE=test

# CloudWatch (Disabled for Tests)
CLOUDWATCH_ENABLED=false
CLOUDWATCH_NAMESPACE=MoneyWise/Test
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring (Disabled for Tests)
METRICS_ENABLED=false
METRICS_FLUSH_INTERVAL=30000
HEALTH_CHECK_ENABLED=true

# Plaid (Test/Sandbox Mode)
PLAID_CLIENT_ID=test_client_id
PLAID_SECRET=test_secret
PLAID_ENV=sandbox

# Email (Test Mode)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=test
MAIL_PASSWORD=test
MAIL_FROM=test@moneywise.test
