{
  "name": "@money-wise/web",
  "version": "0.5.0",
  "description": "MoneyWise Next.js Web Application",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:basic": "playwright test --config=playwright.basic.config.ts",
    "test:e2e:mcp": "echo 'Use MCP Playwright tools in Claude Code for enhanced E2E testing. See docs/development/mcp-playwright-integration.md'",
    "test:visual": "playwright test e2e/visual/",
    "test:visual:update": "playwright test e2e/visual/ --update-snapshots",
    "test:visual:ui": "playwright test e2e/visual/ --ui",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:setup": "playwright test --global-setup",
    "test:e2e:debug": "PWDEBUG=1 playwright test --headed --max-failures=1",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "clean": "rm -rf .next out coverage node_modules/.cache",
    "dev:clean": "pnpm clean && next dev",
    "build:clean": "pnpm clean && next build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@money-wise/types": "workspace:*",
    "@money-wise/ui": "workspace:*",
    "@money-wise/utils": "workspace:*",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@sentry/browser": "^10.27.0",
    "@sentry/nextjs": "^10.27.0",
    "@sentry/react": "^10.27.0",
    "@tanstack/react-query": "^5",
    "@tanstack/react-query-devtools": "^5",
    "autoprefixer": "^10.4.22",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "immer": "^10.2.0",
    "isomorphic-dompurify": "^2.33.0",
    "lucide-react": "^0.294.0",
    "next": "15.4.7",
    "postcss": "^8.4.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss": "^3.3.6",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@next/bundle-analyzer": "^15.2.4",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "baseline-browser-mapping": "^2.8.32",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.2.32",
    "jsdom": "^23.0.1",
    "msw": "^2.12.3",
    "typescript": "^5.9.3",
    "vitest": "^1.0.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
