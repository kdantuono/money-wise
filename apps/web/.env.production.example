# MoneyWise Web - Production Environment Configuration
# SECURITY WARNING: NEVER commit this file with real values
# Copy to .env.production and populate with production-specific values

# Application Configuration
NEXT_PUBLIC_APP_NAME=MoneyWise
NEXT_PUBLIC_APP_VERSION=0.4.7
NEXT_PUBLIC_API_URL=https://api.moneywise.app/api  # Your production backend URL

# Sentry Configuration - PRODUCTION PROJECT
# Get DSN from: https://sentry.io/settings/{org}/projects/moneywise-production/keys/
NEXT_PUBLIC_SENTRY_DSN=https://<key>@o<org>.ingest.sentry.io/<production-project-id>
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=moneywise-production
SENTRY_RELEASE=moneywise@0.4.7  # Match package.json version

# Sentry Environment-Specific Settings
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% sampling for production (conserve quota)
NEXT_PUBLIC_SENTRY_DEBUG=false

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ENABLED=true
