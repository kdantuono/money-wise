{
  "rules": {
    // MVP: Minimal ESLint rules - focus on functionality over style
    "no-debugger": "error",
    "no-var": "error",
    "prefer-const": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts"],
      "rules": {
        "max-lines-per-function": "off",
        "require-jsdoc": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}
