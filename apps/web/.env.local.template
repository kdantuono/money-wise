# MoneyWise Web Application - Environment Variables Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
# Development: http://localhost:3001/api
# Production: Your production API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# =============================================================================
# Banking Integration
# =============================================================================

# Enable/disable banking integration feature
# Set to 'true' to enable, 'false' to disable
NEXT_PUBLIC_BANKING_ENABLED=true

# OAuth redirect base URL
# This is the base URL used for OAuth callbacks
# Development: http://localhost:3000
# Production: Your production domain (e.g., https://app.moneywise.com)
NEXT_PUBLIC_OAUTH_REDIRECT_BASE=http://localhost:3000

# Banking OAuth callback path (usually /banking/callback)
# Full OAuth redirect URL will be: {NEXT_PUBLIC_OAUTH_REDIRECT_BASE}{NEXT_PUBLIC_OAUTH_CALLBACK_PATH}
NEXT_PUBLIC_OAUTH_CALLBACK_PATH=/banking/callback

# =============================================================================
# Application Configuration
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Application name
NEXT_PUBLIC_APP_NAME=MoneyWise

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable analytics tracking
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Enable error tracking (Sentry, etc.)
NEXT_PUBLIC_ERROR_TRACKING_ENABLED=false

# Enable debug mode (shows detailed logs in console)
NEXT_PUBLIC_DEBUG_MODE=true

# =============================================================================
# Authentication
# =============================================================================

# JWT token storage key (for localStorage)
NEXT_PUBLIC_AUTH_TOKEN_KEY=auth_token

# Session timeout in minutes
NEXT_PUBLIC_SESSION_TIMEOUT=30

# =============================================================================
# Optional: Third-Party Services
# =============================================================================

# Sentry DSN (if using Sentry for error tracking)
# NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics ID (if using GA)
# NEXT_PUBLIC_GA_ID=

# =============================================================================
# Development Only
# =============================================================================

# Enable Mock Service Worker (MSW) for API mocking
# Useful for development and testing without backend
NEXT_PUBLIC_ENABLE_MSW=false

# Show detailed API logs in console
NEXT_PUBLIC_API_DEBUG=true

# =============================================================================
# Notes
# =============================================================================

# 1. NEVER commit .env.local to version control
# 2. Update .env.local when you add new environment variables
# 3. All NEXT_PUBLIC_* variables are exposed to the browser
# 4. Server-only secrets should NOT use the NEXT_PUBLIC_ prefix
# 5. See Next.js docs for more: https://nextjs.org/docs/basic-features/environment-variables
