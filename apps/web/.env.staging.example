# MoneyWise Web - Staging Environment Configuration
# Copy to .env.staging and populate with staging-specific values

# Application Configuration
NEXT_PUBLIC_APP_NAME=MoneyWise
NEXT_PUBLIC_APP_VERSION=0.4.7
NEXT_PUBLIC_API_URL=https://staging-api.moneywise.app/api  # Your staging backend URL

# Sentry Configuration - STAGING PROJECT
# Get DSN from: https://sentry.io/settings/{org}/projects/moneywise-staging/keys/
NEXT_PUBLIC_SENTRY_DSN=https://<key>@o<org>.ingest.sentry.io/<staging-project-id>
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=moneywise-staging
SENTRY_RELEASE=moneywise@$(git rev-parse --short HEAD)

# Sentry Environment-Specific Settings
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.5  # 50% sampling for staging
NEXT_PUBLIC_SENTRY_DEBUG=false

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ENABLED=true
