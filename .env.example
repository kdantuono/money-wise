# Database Configuration (Required)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=moneywise

# Application Configuration
# ⚠️ CRITICAL: DO NOT SET NODE_ENV IN .ENV FILES!
# Next.js/NestJS manage NODE_ENV automatically:
#   - `npm run dev` → NODE_ENV=development
#   - `npm run build/start` → NODE_ENV=production
# Setting NODE_ENV manually causes Next.js 15+ build failures
# See: https://nextjs.org/docs/messages/non-standard-node-env
PORT=3001

# Security Configuration
JWT_SECRET=your_jwt_secret_here

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# External Service Configuration (Optional)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox

# Email Configuration (Optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password

# Monitoring & Logging (Optional)
LOG_LEVEL=info
ENABLE_METRICS=true

# Development Only
SWAGGER_ENABLED=true